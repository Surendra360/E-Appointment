<%-include("./partials/header") %>
    <%-include("./partials/nav") %>

        <div class="w-full h-[100vh] flex flex-col gap-10 items-center justify-center bg-zink-800 px-30">
            <h1 class="text-4xl border-b border-black py-3 font-semibold">UPDATE NOW</h1>
            <div class="flex items-center justify-center gap-10">

                <form action="/update" method="post">
                    <div class="w-[30vw] bg-white py-6 rounded-md px-10 shadow-md">
                        <div class="space-y-4 mt-6">
                            <div class="w-full flex flex-col gap-2">
                                <label>Fullname</label>
                                <input value="<%=currentUser.fullname%>" name="fullname" type="text" placeholder="fullname"
                                    class="w-full px-4 py-2 bg-gray-50" />
                            </div>
                            <div class="w-full flex flex-col gap-2">
                                <label>Username</label>
                                <input value="<%=currentUser.username%>" name="username" type="text" placeholder="username"
                                class="w-full px-4 py-2 bg-gray-50" />
                            </div>
                            <div class="w-full flex flex-col gap-2">
                                <label>Email</label>
                                <input value="<%=currentUser.email%>" name="email" type="text" placeholder="email"
                                class="w-full px-4 py-2 bg-gray-50" />
                            </div>
                            <div class="w-full flex flex-col gap-2">
                                <label>Phone</label>
                                <input value="<%=currentUser.phone%>" name="phone" type="text" placeholder="Mobile Number"
                                    class="w-full px-4 py-2 bg-gray-50" />
                            </div>
        
                        </div>
                        <button
                            class="w-full mt-5 bg-indigo-600 text-white py-2 rounded-md font-semibold tracking-tight mb-3">Update</button>
                        <p>Don't want to update - <a class="text-blue-500" href="/profile">Back</a></p>
                    </div>

                </form>
            </div>
        </div>

        <%-include("./partials/footer") %>